{% extends 'layout.njk' %}

{% block styles %}
    <link rel="stylesheet" href="/teachers.css">
{% endblock %}

{% block content %}
    <div class="card table-container">
        <div class="header">
            <a class="button" href="/teachers/create">New Teacher</a>
            <form action="/teachers" method="GET">
                <input
                    type="text"
                    name="filter"
                    placeholder="Filter by name or services! :)"
                    value="{{filter}}"
                >
                <button type="submit">Filter</button>
            </form>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Teachers</th>
                    <th>Services</th>
                    <th>Students</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {%for teacher in teachers%}
                    <tr>
                        <td>
                            <span style="background-image: url({{teacher.avatar_url}})"></span>
                            {{teacher.name}}</td>
                        <td>{{teacher.services}}</td>
                        <td>{{teacher.total_students}}</td>
                        <td><a href="/teachers/{{teacher.id}}">Details</a></td>
                    </tr>
                {%endfor%}
            </tbody>
        </table>
    </div>
{% endblock content %}
