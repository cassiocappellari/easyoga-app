{% extends 'layout.njk' %}

{% block styles %}
    <link rel="stylesheet" href="/edit.css">
    <link rel="stylesheet" href="/teachers.css">
{% endblock %}

{% block content %}
    <div class="card">
            <section
                class="avatar" 
                style="background: url({{teacher.avatar_url}}) no-repeat center center / cover">
            </section>
            <section class="details">
                <form method="POST" action="/teachers?_method=PUT">

                    <h3>Edit Teacher</h3>

                    {%include 'teachers/fields.njk'%}  
                    <input
                        type="hidden"
                        name="id"
                        value={{teacher.id}}
                    >
                <div class="form-buttons"> 
                    <button type="submit">Send</button>
                </form>
                    <form id="form-delete" action="/teachers?_method=DELETE" method="post">
                        <input type="hidden" name="id" value={{teacher.id}}>
                        <button type="submit">Delete</button>
                    </form>
                </div> 
            </section>
    </div>
{% endblock content %}
